<Window x:Class="SweetShopWPF.FormFridge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SweetShopWPF"
        mc:Ignorable="d"
        Title="Fridge" Height="450" Width="400">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FFrName" HorizontalAlignment="Left" Height="23" Margin="94,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="236"/>
        <DataGrid x:Name="FFrList" HorizontalAlignment="Left" Height="271" Margin="27,67,0,0" VerticalAlignment="Top" Width="303"/>
        <Button x:Name="FRSave" Content="Save" HorizontalAlignment="Left" Margin="44,363,0,0" VerticalAlignment="Top" Width="75" Click="FRSave_Click"/>
        <Button x:Name="FRCancel" Content="Cancel" HorizontalAlignment="Left" Margin="167,363,0,0" VerticalAlignment="Top" Width="75" Click="FRCancel_Click"/>

    </Grid>
</Window>
