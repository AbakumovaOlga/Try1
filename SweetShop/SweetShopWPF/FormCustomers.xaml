<Window x:Class="SweetShopWPF.FormCustomers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SweetShopWPF"
        mc:Ignorable="d"
        Title="Customers" Height="450" Width="500">
    <Grid>
        <DataGrid x:Name="FCusSList" HorizontalAlignment="Left" Height="401" Margin="25,10,0,0" VerticalAlignment="Top" Width="350"/>
        <Button x:Name="FCusSAdd" Content="Add" HorizontalAlignment="Left" Margin="401,27,0,0" VerticalAlignment="Top" Width="75" Click="FCusSAdd_Click"/>
        <Button x:Name="FCusSRel" Content="Reload" HorizontalAlignment="Left" Margin="401,101,0,0" VerticalAlignment="Top" Width="75" Click="FCusSRel_Click"/>
        <Button x:Name="FCusSDel" Content="Delete" HorizontalAlignment="Left" Margin="401,76,0,0" VerticalAlignment="Top" Width="75" Click="FCusSDel_Click"/>
        <Button x:Name="FCusSUpd" Content="Update" HorizontalAlignment="Left" Margin="401,51,0,0" VerticalAlignment="Top" Width="75" Click="FCusSUpd_Click"/>

    </Grid>
</Window>
