<Window x:Class="SweetShopWPF.FormIngredients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SweetShopWPF"
        mc:Ignorable="d"
        Title="Ingredients" Height="450" Width="600">
    <Grid>
        <DataGrid x:Name="FIngrSList" HorizontalAlignment="Left" Height="401" Margin="10,10,0,0" VerticalAlignment="Top" Width="379"/>
        <Button x:Name="FIngrSAdd" Content="Add" HorizontalAlignment="Left" Margin="451,29,0,0" VerticalAlignment="Top" Width="75" Click="FIngrSAdd_Click"/>
        <Button x:Name="FIngrSUpd" Content="Update" HorizontalAlignment="Left" Margin="451,55,0,0" VerticalAlignment="Top" Width="75" Click="FIngrSUpd_Click"/>
        <Button x:Name="FIngrSDel" Content="Delete" HorizontalAlignment="Left" Margin="451,80,0,0" VerticalAlignment="Top" Width="75" Click="FIngrSDel_Click"/>
        <Button x:Name="FIngrSRel" Content="Reload" HorizontalAlignment="Left" Margin="451,105,0,0" VerticalAlignment="Top" Width="75" Click="FIngrSRel_Click"/>

    </Grid>
</Window>
