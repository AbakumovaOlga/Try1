<Window x:Class="SweetShopWPF.FormCakes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SweetShopWPF"
        mc:Ignorable="d"
        Title="Cakes" Height="450" Width="600">
    <Grid>
        <DataGrid x:Name="FCakeSList" HorizontalAlignment="Left" Height="401" Margin="30,10,0,0" VerticalAlignment="Top" Width="365"/>
        <Button x:Name="FCakeSAdd" Content="Add" HorizontalAlignment="Left" Margin="434,18,0,0" VerticalAlignment="Top" Width="75" Click="FCakeSAdd_Click"/>
        <Button x:Name="FCakeSUpd" Content="Update" HorizontalAlignment="Left" Margin="434,43,0,0" VerticalAlignment="Top" Width="75" Click="FCakeSUpd_Click"/>
        <Button x:Name="FCakeSAddDel" Content="Delete" HorizontalAlignment="Left" Margin="434,67,0,0" VerticalAlignment="Top" Width="75" Click="FCakeSAddDel_Click"/>
        <Button x:Name="FCakeSAddRel" Content="Reload" HorizontalAlignment="Left" Margin="434,92,0,0" VerticalAlignment="Top" Width="75" Click="FCakeSAddRel_Click"/>

    </Grid>
</Window>
