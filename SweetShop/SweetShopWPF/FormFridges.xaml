<Window x:Class="SweetShopWPF.FormFridges"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SweetShopWPF"
        mc:Ignorable="d"
        Title="Fridges" Height="450" Width="600">
    <Grid>
        <DataGrid x:Name="FFrSList" HorizontalAlignment="Left" Height="401" Margin="10,10,0,0" VerticalAlignment="Top" Width="421"/>
        <Button x:Name="FFrSAdd" Content="Add" HorizontalAlignment="Left" Margin="494,39,0,0" VerticalAlignment="Top" Width="75" Click="FFrSAdd_Click"/>
        <Button x:Name="FFrSUpd" Content="Update" HorizontalAlignment="Left" Margin="494,63,0,0" VerticalAlignment="Top" Width="75" Click="FFrSUpd_Click"/>
        <Button x:Name="FFrSDel" Content="Delete" HorizontalAlignment="Left" Margin="494,88,0,0" VerticalAlignment="Top" Width="75" Click="FFrSDel_Click"/>
        <Button x:Name="FFrSRel" Content="Reload" HorizontalAlignment="Left" Margin="494,113,0,0" VerticalAlignment="Top" Width="75" Click="FFrSRel_Click"/>

    </Grid>
</Window>
