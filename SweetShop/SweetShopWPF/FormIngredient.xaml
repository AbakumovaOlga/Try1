<Window x:Class="SweetShopWPF.FormIngredient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SweetShopWPF"
        mc:Ignorable="d"
        Title="Ingredient" Height="200" Width="450">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="60,48,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FIngrName" HorizontalAlignment="Left" Height="23" Margin="171,48,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="236"/>
        <Button x:Name="FIngrSave" Content="Save" HorizontalAlignment="Left" Margin="102,111,0,0" VerticalAlignment="Top" Width="75" Click="FIngrSave_Click"/>
        <Button x:Name="FIngrCancel" Content="Cancel" HorizontalAlignment="Left" Margin="243,111,0,0" VerticalAlignment="Top" Width="75" Click="FIngrCancel_Click"/>

    </Grid>
</Window>
